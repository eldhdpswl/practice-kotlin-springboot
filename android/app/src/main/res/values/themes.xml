<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Coco" parent="Theme.AppCompat.Light" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Coco.Splash" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/red</item> <!-- splash 화면의 백그라운드 색깔 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/graph</item> <!-- splash화면 아이콘 설정 -->
        <item name="postSplashScreenTheme">@style/Theme.Coco</item> <!-- splash 끝나고 어떻게 할건지, 위에 style coco 사용 -->
    </style>
</resources>